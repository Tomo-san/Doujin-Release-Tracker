body
    background: url('../images/bg.png') repeat 0 0 scroll transparent
    font-family:"ヒラギノ角ゴ Pro W3","Hiragino Kaku Gothic Pro",Osaka,"メイリオ",Meiryo,"ＭＳ Ｐゴシック","MS PGothic",sans-serif;

p
    margin: 12px 0 15px

a
    color: #aa201d
    text-decoration: none
    &:hover
        color: #aa201d
        text-decoration: underline

table
    background: #FFF
    border: 1px solid #ddd
    .available
        text-align: center
        max-width: 90px

#message
    background-color: #FFF
    border-radius: 10px
    padding: 10px 15px
    #attend-message
        margin: 20px 0 0

footer
    margin: 20px auto
    text-align: center
    width: 960px
    p
        font-size: 12px